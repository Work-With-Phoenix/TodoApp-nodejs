<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App Nodejs</title>
    <!-- styles -->
    <link rel="stylesheet" href="/static/stylesheets/styles.css" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
    <div class="todo-container">
        
            <h2>Todo List</h2>
            <div class="todo">
               <form class="todo-header" action="/" method="POST">
                <input type="text" name="content" >
                <button type="submit"><span class="fas fa-plus"></span> </button>
               </form> 

               <ul class="todo-list">
                   <% todoTasks.forEach(details =>{ %> 

                   <li class="todo-list-item">
                       <div class="todo-list-item-name"><%= details.content %> </div>
                       <a class="edit" href="/edit/<%= details._id %> ">
                           <span class="fas fa-edit"></span>
                          
                       </a>
                       <a class="remove" href="/remove/<%= details._id %> ">
                        <span class="fas fa-times"></span>
                    </a>
                   </li>
<% }) %> 
               </ul>
            </div>
       
    </div>
</body>
</html>